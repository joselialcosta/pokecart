{
  "compilerOptions": {
    "outDir": "./out-tsc/snapshot",
    "types": [
      "jest",
      "node"
    ],
    "sourceMap": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "target": "es2015",
    "lib": ["es2018", "es2015"]
  },
  "include": [
    "../node_modules/**/*.d.ts",
    "./**/*.snapshotTest.ts",
    "./snapshotTests/**/*.ts",
    "./**/setupSnapshotTests.ts"
  ]
}
